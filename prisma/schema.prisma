generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PetSize {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  pets      Pet[]

  @@map("pet_sizes")
}

model PetColor {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  pets      Pet[]

  @@map("pet_colors")
}

model PetSex {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  pets      Pet[]

  @@map("pet_sexes")
}

model PetType {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now()) @map("created_at")
  breeds    PetBreed[]
  pets      Pet[]

  @@map("pet_types")
}

model PetBreed {
  id        Int      @id @default(autoincrement())
  name      String
  typeId    Int      @map("type_id")
  type      PetType  @relation(fields: [typeId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  pets      Pet[]

  @@map("pet_breeds")
}

model Pet {
  id   Int    @id @default(autoincrement())
  name String
  age  Int

  sizeId Int     @map("size_id")
  size   PetSize @relation(fields: [sizeId], references: [id])

  breedId Int      @map("breed_id")
  breed   PetBreed @relation(fields: [breedId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  userId Int  @map("user_id")
  owner   User @relation(fields: [userId], references: [id])

  typeId Int     @map("type_id")
  type   PetType @relation(fields: [typeId], references: [id])

  sexId Int    @map("sex_id")
  sex   PetSex @relation(fields: [sexId], references: [id])

  colorId Int      @map("color_id")
  color   PetColor @relation(fields: [colorId], references: [id])

  photoUrl                   String
  distinctiveCharacteristics String?
  reports                    Report[]

  @@map("pets")
}

model User {
  id        Int          @id @default(autoincrement())
  email     String       @unique
  name      String
  password  String
  phone     String?
  lat       Float
  long      Float
  createdAt DateTime     @default(now()) @map("created_at")
  pets      Pet[]
  devices   UserDevice[]
  reports   Report[]

  @@map("users")
}

model UserDevice {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  user      User     @relation(fields: [userId], references: [id])
  token     String
  platform  String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("user_devices")
}

model ReportType {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  reports   Report[]

  @@map("report_types")
}

model Report {
  id Int @id @default(autoincrement())

  petId Int @map("pet_id")
  pet   Pet @relation(fields: [petId], references: [id])

  reportTypeId Int        @map("report_type_id")
  reportType   ReportType @relation(fields: [reportTypeId], references: [id])

  description String
  photoUrl    String? @map("photo_url")
  lat         Float
  long        Float
  resolved    Boolean @default(false)

  reportedById Int  @map("user_id")
  reportedBy   User @relation(fields: [reportedById], references: [id])

  reportedAt DateTime  @default(now()) @map("created_at")
  resolvedAt DateTime? @map("resolved_at")

  lostMatches  ReportMatch[] @relation("LostReport")
  foundMatches ReportMatch[] @relation("FoundReport")

  @@map("reports")
}

model ReportMatch {
  id Int @id @default(autoincrement())

  lostReportId Int @map("lost_report_id")
  lostReport   Report @relation("LostReport", fields: [lostReportId], references: [id])

  foundReportId Int @map("found_report_id")
  foundReport   Report @relation("FoundReport", fields: [foundReportId], references: [id])

  matchScore Float @map("match_score")
  distanceKilometers Float @map("distance_kilometers")
  status String
  createdAt DateTime @default(now()) @map("created_at")

  @@map("report_matches")
}


